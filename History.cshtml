@model List<MonthlyContractSystems.Models.ContractClaim>

<h2>📜 Coordinator Claim History</h2>
<p>Pending claims: @Model.Count</p>

<table class="table">
    var claims = ClaimRepository.Claims
    .Where(c => c.Status == "Pending")
    .ToList();

    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr class="table-warning">
                <td>@claim.LecturerName</td>
                <td>@claim.Month.ToString("MMM yyyy")</td>
                <td>@claim.HoursWorked</td>
                <td>R @claim.HourlyRate</td>
                <td>R @claim.Amount</td>
                <td>@claim.Status</td>
                <td>
                    <form asp-controller="Coordinator" asp-action="Verify" method="post">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button type="submit" class="btn btn-success">✅ Verify</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
