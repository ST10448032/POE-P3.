<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MonthlyContractSystems</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MonthlyContractSystems.styles.css" asp-append-version="true" />
</head>

<body>
    <header style="background-color: #007BFF; color: white; padding: 15px; box-shadow: 0 2px 5px rgba(0,0,0,0.2);">
        <div class="container d-flex justify-content-between align-items-center">
            <h2 style="margin: 0; font-weight: 600;">📘 Monthly Contract Claims Portal</h2>
            <nav>
                <a href="/" style="color: white; margin-right: 20px; text-decoration: none;">🏠 Home</a>
                <a href="/Lecturer/History" style="color: white; margin-right: 20px; text-decoration: none;">👩‍🏫 Lecturer</a>
                <a href="/Coordinator/History" style="color: white; margin-right: 20px; text-decoration: none;">🧑‍💼 Coordinator</a>
                <a href="/HR/History" style="color: white; text-decoration: none;">💼 HR</a>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color: #f8f9fa; color: #333; padding: 10px; text-align: center; font-size: 14px;">
        Made with 💙 by Mohlao Rakabe | POE Submission 2025
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
